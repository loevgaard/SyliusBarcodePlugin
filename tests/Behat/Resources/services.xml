<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="loevgaard_sylius_barcode.behat.context.setup.product"
                 class="Tests\Loevgaard\SyliusBarcodePlugin\Behat\Context\Setup\ProductContext">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.product_variant_resolver.default" />
        </service>

        <service id="loevgaard_sylius_barcode.behat.context.ui.admin.managing_products"
                 class="Tests\Loevgaard\SyliusBarcodePlugin\Behat\Context\Ui\Admin\ManagingProductsContext">
            <argument type="service" id="loevgaard_sylius_barcode.behat.page.admin.product.create_simple" />
            <argument type="service" id="loevgaard_sylius_barcode.behat.page.admin.product.update_simple" />
        </service>

        <service id="loevgaard_sylius_barcode.behat.page.admin.product.create_simple"
                 class="Tests\Loevgaard\SyliusBarcodePlugin\Behat\Page\Admin\Product\CreateSimpleProductPage"
                 parent="sylius.behat.page.admin.product.create_simple"
                 public="false">
            <argument type="string">sylius_admin_product_create_simple</argument>
        </service>

        <service id="loevgaard_sylius_barcode.behat.page.admin.product.update_simple"
                 class="Tests\Loevgaard\SyliusBarcodePlugin\Behat\Page\Admin\Product\UpdateSimpleProductPage"
                 parent="sylius.behat.page.admin.product.update_simple"
                 public="false">
            <argument type="string">sylius_admin_product_update</argument>
        </service>

    </services>
</container>
